<Window x:Class="SiliconStudio.Meet.EjsManager.BusyDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Please Wait" Height="150" Width="350" WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow">
    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="None" TileMode="Tile" Viewport="0,0,20,20" ViewportUnits="Absolute" 
                           ImageSource="pack://application:,,,/Stages/imgData/bgtile.png" />
        </Grid.Background>
        
        <Label Content="Please Wait. Working on your request." FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="16,-30,16,0" />
        <ProgressBar IsIndeterminate="True" Height="10" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="16,30,16,0" />
        
    </Grid>
</Window>
