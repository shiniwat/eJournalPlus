<UserControl x:Class="SiliconStudio.Meet.EjpControls.ReportKMEntity"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid AllowDrop="False" HorizontalAlignment="Stretch">
      <Grid.RowDefinitions>
        <RowDefinition Height="15"/>
        <RowDefinition Height="15"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <Border Background="Chocolate" Grid.RowSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
      <Rectangle Fill="Yellow" Grid.RowSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
      <Label Padding="0" x:Name="_l_Title" Grid.Row="0" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
      <Label Padding="0" x:Name="_l_Id" Grid.Row="1" FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Center"/>
      <TextBox AcceptsReturn="True" AcceptsTab="True" IsReadOnly="True" x:Name="_tb_Body" Grid.Row="2" />
    </Grid>
</UserControl>
